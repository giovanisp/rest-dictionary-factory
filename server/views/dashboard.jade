include ./header.jade
div.container.page  
  div.row
    div.col-md-12
      h1.float-left My Dictionaries
      a(href="/new").float-right.primary-button Create New Dictionary
  div.row
    div.col-md-12
      .content
        .row
          each dic in dictionaries      
            .col-md-3
              .card.dictionary
                a(href="/general/#{dic._id}").title #{dic.display_name}
                a.sub-title #{dic.owner}
                .icon
                  img(src="#{dic.icon}")    
                .actions
                  a.download-button(href="https://github.com/#{dic.owner}/#{dic.name}/archive/master.zip") Download
                  form(action="/delete/#{dic._id}" method="post")
                    button.delete-button(href="")
include ./footer.jade
