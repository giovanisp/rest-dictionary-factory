doctype html
html
  head
    title The Dictionary Factory
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.min.css")    
    link(rel="stylesheet" href="/styles/dictionary-factory.css")    
  body.body
  nav.navbar.navbar-fixed-top
    .container
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/') The Dictionary Factory
      #navbar.navbar-collapse.collapse        
        ul.nav.navbar-nav.navbar-right
          li
            a(href='/public') Catalog
          if !user
            li              
              a(href='/login') Log in with GitHub
          else              
            li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                  | #{user.displayName}
                  span.caret
                ul.dropdown-menu
                  li
                    a(href='/dashboard') My Dictionaries                        
                  li
                    a(href='/auth/logout') Logout        
  .page                
